@using MovieFreak.Models
@model LoginViewModel
@{
    ViewBag.Title = "Strona startowa";
}

<div style=" padding-bottom:50px; padding-top:50px; font-size:large"  class="row">
    <div class="col-md-6">
        <h2>Opis</h2>
        <p>
            MovieFreak ma za zadanie doradzić użytkowikom w wyborze filmów które mogli by polubić.
            Aby z niego skorzystć wystarczy sie zalogować i ocenić filmy z listy która jest generowana losowo.
            Po zalogowaniu i ocenie filmów MovieFreak na podstawie algorytmów rekomendacyjnych przedstawi listę filmów wartych do obejrzenia.
            W razie pytań zapraszam do <a href="~/Home/Contact">kontaktu</a>.
        </p>
    </div>
    <div class="col-md-6">
        <h2>Logowanie</h2>
        <p>Aby skorzystać z aplikacji można sie zalogować przez konto Facebooka lub Google.</p>
        <p>
            @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
        </p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
